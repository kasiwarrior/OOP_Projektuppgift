<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisualInterface.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <VerticalStackLayout
    Padding="30,0"
    Spacing="25">
                <Label
        Text="Välkommen"
        Style="{StaticResource Headline}"
        SemanticProperties.HeadingLevel="Level1" />

                <Button
                 x:Name="CounterBtn"
                 Text="Lägg till arbetare" 
                 SemanticProperties.Hint="Counts the number of times you click"
                 Clicked="OnCounterClicked"/>

                <Button
                x:Name="Editbtn"
                Text="Redigera arbetare" 
                />
                <Button
                x:Name="Deletebtn"
                Text="Ta bort arbetare" 
                />

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
