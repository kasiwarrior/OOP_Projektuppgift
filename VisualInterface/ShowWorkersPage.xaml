<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VisualInterface.ShowWorkersPage"
             Title="Alla Arbetare">

    <Grid>
        <ListView x:Name="WorkersListView" 
                        SelectionMode="None" 
                        Margin="10">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding IdDisplay}" 
                               FontAttributes="Bold" 
                               Grid.Row="0" 
                               Grid.Column="0" />
                            <Label Text="{Binding NameDisplay}" 
                               FontAttributes="Bold" 
                               Grid.Row="0" 
                               Grid.Column="1" 
                               Margin="10,0,0,0"/>

                            <Label Text="{Binding WorkTypeDisplay}" 
                               FontSize="Small" 
                               Grid.Row="1" 
                               Grid.Column="1" />
                            <Label Text="{Binding ShiftTypeDisplay}" 
                               FontSize="Small" 
                               Grid.Row="1" 
                               Grid.Column="2" 
                               HorizontalOptions="End"
                               VerticalOptions="End"/>
                            

                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>